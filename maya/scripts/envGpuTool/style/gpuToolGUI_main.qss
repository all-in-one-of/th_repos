* {
font-family:'微软雅黑';
color:white;
}

/*设置背景图片*/
QMainWindow#MainWindow{
    border-width: 5px;
    border-color: beige;
    border-top-left-radius:15px;
    border-top-right-radius:15px;
    border: 2px solid #999;  
}
QLabel#titleLab {
    font: 12pt "隶书";
    color: rgb(0, 131, 200); 
    padding: 3px;
}

/*设置按钮效果--star*/

QPushButton#refresh_PB {

    background-color: rgb(0,85,125);
    border-style: outset;
    border-width: 1px;
    border-radius: 10px;
    border-color: beige;
    font: bold 10px;
    min-width: 4em;
    padding: 3px;
}
QPushButton#refresh_PB:hover {
    background-color: rgb(0,137,200);
    border-style: inset;
}
QPushButton#refresh_PB:pressed {
    background-color: rgb(0, 0, 0);
    border-style: inset;
}

QToolButton#getDecInfo_TB {
    background-color: rgb(255,220,0);
    border-style: outset;
    border-width: 1px;
    border-radius: 8px;
    border-color: beige;
    font: bold 10px;
    min-width: 3em;
    padding: 2px;
}
QToolButton#getDecInfo_TB:hover {
    background-color: rgb(255,137,0);
    border-style: inset;
}
QToolButton#getDecInfo_TB:pressed {
    background-color: rgb(0, 0, 0);
    border-style: inset;
}

