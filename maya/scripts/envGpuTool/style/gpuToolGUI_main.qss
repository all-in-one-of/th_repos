/*设置进度条效果--*/
QProgressBar {
    border: 2px solid grey;
    border-radius: 8px;
    text-align: center;

}
QProgressBar::chunk {
    border-radius: 2px;

    background-color: #05B8CC;
    width: 9px;
    margin: 0.5px;
}
/*设置表格效果--*/
QTableView , QTableWidget{
 selection-background-color:rgb(50, 80, 139);
}
